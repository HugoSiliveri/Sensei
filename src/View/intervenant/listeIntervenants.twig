{% extends "base.twig" %}

{% block page_content %}
    {% set nbIntervenants = intervenants|length %}
    {% set chunkSize = (nbIntervenants / 3)|round(0, 'ceil') %}
    {% set chunks = intervenants|batch(chunkSize) %}
    <div class="titreEtBarreRecherche">
        <h2>Liste des
            intervenant.e.s</h2> {# TODO : A changer en fonction des intervenants du dÃ©partements et des vacataires #}
        {% include "templates/barreRechercheIntervenant.twig" %}
    </div>
    <div class="liste">
        {% for chunk in chunks %}
            <ul>
                {% for intervenant in chunk %}
                    <li class="boutonContainer">
                        <a href="{{ route("afficherDetailIntervenant", {"idIntervenant": intervenant.getIdIntervenant}) }}">
                            {{ intervenant.getIdIntervenant }} {{ intervenant.getNom }}   {{ intervenant.getPrenom }}   {{ intervenant.getIdIntervenantReferentiel }}</a>
                    </li>
                {% endfor %}
            </ul>
        {% endfor %}
    </div>
{% endblock %}


