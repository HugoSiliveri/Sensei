{% extends "base.twig" %}

{% block page_content %}
    <div class="gestionListe">
        <div class="titreEtBarreRecherche">
            <h2>Liste des
                statuts</h2>
        </div>
        <div class="liste">
            <ul class="description">
                {% for statut in statuts %}
                    <li>
                        <p>{{ statut.getLibStatut }}</p>
                        <a href="{{ route("afficherFormulaireMiseAJourStatut", {idStatut : statut.getIdStatut}) }}">
                            <img src="{{ asset("../ressources/img/pencil.svg") }}" alt="update">
                        </a>
                        <button class="boutonSuppression" onclick="afficherPopupSuppression('Statut', {{ statut.getIdStatut }} )">
                            <img src="{{ asset("../ressources/img/delete.svg") }}" alt="delete">
                        </button>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}